SELECT B.CF$_SUBCONTRATO,
       B.CF$_APROVACAO_LIDER,
       (SELECT MDS.MAIOR_DATA FROM IFSINFO.BS_F_MAIOR_DATA_SUBCON MDS WHERE MDS.SUB_CON_NO = B.CF$_SUBCONTRATO) DATA_QUALISIGN,
       ROUND((SELECT MDS.MAIOR_DATA FROM IFSINFO.BS_F_MAIOR_DATA_SUBCON MDS WHERE MDS.SUB_CON_NO = B.CF$_SUBCONTRATO)-B.CF$_APROVACAO_LIDER,2) DIFF
FROM IFSCTR.PURCHASE_REQ_LINE_ALL_CFV B
WHERE B.CF$_SUBCONTRATO IS NOT NULL
