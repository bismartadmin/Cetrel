SELECT SC.COMPANY COMPANY,
       SC.SITE SITE,
       CF$_DATA_CRIACAO_SUBCON DATA_CRIACAO_SUBCON,
       ROUND(SC.CF$_VALOR_DESCONTO,2) SAVING,
       TO_CHAR(SC.CF$_DATA_CRIACAO_SUBCON,'YYYY/MM') DATA,
       TO_CHAR(SC.CF$_DATA_CRIACAO_SUBCON, 'FMMonth') MES,
       SC.C_MANAGER_GROUP_ID AREA,
       SC.SUB_CON_NO QTDE
FROM   IFSCTR.SUB_CONTRACT_CFV SC
WHERE  SC.CF$_N_REQUISICAO IS NOT NULL AND (SC.CF$_VALOR_DESCONTO > 0 AND SC.CF$_VALOR_DESCONTO IS NOT NULL)
